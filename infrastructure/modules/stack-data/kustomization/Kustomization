apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namespace: data

bases:
- ../../../../kustomizations/data/polynote/base
- ../../../../kustomizations/data/neo4j/base

configMapGenerator:
- name: polynote-config-file
  behavior: replace
  files:
  - polynote/config.yaml

secretGenerator:
- name: polynote-env
  envs:
  - polynote/polynote.env
- name: neo4j-env
  behavior: merge
  envs:
  - neo4j/neo4j.env

patchesStrategicMerge:
- polynote-add-env.yaml
- polynote-persist-notebooks.yaml
- neo4j-persist-data.yaml
